
{% extends 'UserBundle::base.html.twig' %}

{% block title %}Create new entry{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">

                <form class="form-horizontal" action="{{ path('fos_user_profile_edit',{'id' : id}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">

                    <fieldset>
                        <div id="legend">
                            <legend class="">Update user</legend>
                        </div>






                        <div class="control-group">

                            <div class="controls">
                                {{ form_row(form.email) }}
                            </div>
                        </div>

                        <div class="control-group">

                            <div class="controls">
                                {{ form_row(form.phone) }}
                            </div>
                        </div>

                        <div class="control-group">

                            <div class="controls">
                                {{ form_row(form.address) }}
                            </div>
                        </div>

                        <div class="control-group">

                            <div class="controls">
                                {{ form_row(form.website) }}
                            </div>
                        </div>



                        <div class="control-group">

                            {{ form_rest(form) }}
                            <!-- Button -->
                            <div class="controls">
                                <button type="submit" class="btn btn-success">Update</button>
                            </div>

                        </div>
                    </fieldset>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
